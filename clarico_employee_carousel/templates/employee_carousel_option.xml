<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<!--E-Commerce Product Carousel Snippet's Options -->
	<template id="product_carousel_snippets_option" inherit_id="website.snippet_options">
		<xpath expr="//div[@data-js='background']" position="after">
			<div data-js='js_get_employee' data-selector=".js_get_employee" />
			<div data-js='js_get_style' data-selector=".js_get_employee">
				<li class="dropdown-submenu">
					<a class="snippets_option_font_style" tabindex="-1" href="#">
						Select Style
					</a>
					<ul class="snippets_option_font_style dropdown-menu">
						<li data-style="1">
							<a>Style 1</a>
						</li>
						<li data-style="2">
							<a>Style 2</a>
						</li>
						<li data-style="3">
							<a>Style 3</a>
						</li>
						<li data-style="4">
							<a>Style 4</a>
						</li>
					</ul>
				</li>
			</div>
		</xpath>
	</template>
</odoo>
